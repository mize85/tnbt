option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "tnbt.settings"
    PYTHONPATH: "/opt/python/current/app/tnbt:$PYTHONPATH"

container_commands:
  01_migrate:
    command: ". bin/activate && python manage.py migrate --noinput"
    leader_only: true

  02_createsu:
    command: ". bin/activate && python manage.py createsu"
    leader_only: true

  03_collectstatic:
    command: ". bin/activate && python manage.py collectstatic --noinput"
