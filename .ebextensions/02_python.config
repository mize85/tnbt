option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "tnbt.settings"
    PYTHONPATH: "/opt/python/current/app/tnbt:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "tnbt/tnbt/wsgi.py"

container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python tnbt/manage.py migrate --noinput"
    leader_only: true

  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python tnbt/manage.py createsu"
    leader_only: true

  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python tnbt/manage.py collectstatic --noinput"
